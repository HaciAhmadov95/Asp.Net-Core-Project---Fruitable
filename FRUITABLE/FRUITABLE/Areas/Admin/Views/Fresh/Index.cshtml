@model FreshContent

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Fresh" asp-action="Create">Create Fresh</a>


            <table class="table table-bordered table-contextual mt-5">
                <thead>
                    <tr>
                        <th> Image </th>
                        <th> Title </th>
                        <th> SubTitle </th>
                        <th> Price  </th>
                        <th> Settings </th>
                    </tr>
                </thead>
                <tbody>

                    
                        <tr>

                            <td> <img src="~/img/@Model.Image"> </td>
                            <td> @Model.Title </td>
                            <td> @Model.SubTitle </td>
                            <td> @Model.PriceFirst.@Model.PriceSecond </td>
                            <td>
                                <a class="btn btn-info" asp-area="Admin" asp-controller="Fresh" asp-route-id="@Model.Id" asp-action="Detail">Detail</a>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Fresh" asp-route-id="@Model.Id" asp-action="Edit">Edit</a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Fresh" asp-route-id="@Model.Id" asp-action="Delete">Delete</a>
                            </td>
                        </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


